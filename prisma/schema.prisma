// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Company {
  cik         String   @unique
  companyName String
  ticker      String   @unique
  Filing      Filing[]
}

enum FilingType {
  TENK
  TENQ
  EIGHTK
}

model Filing {
  id         String     @id @unique
  cik        String
  filingDate DateTime
  filingType FilingType
  filingLink String
  filingText String
  Company    Company    @relation(fields: [cik], references: [cik])
}
